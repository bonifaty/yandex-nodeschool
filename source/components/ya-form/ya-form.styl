@import '../../shared/mixins.styl'

.ya-form
    background-color white

    &__container
        container()

    &__header
        padding 10px 0
        background-color $red
        color white
        font(12px, 400, 1.5)

    &__header-content
        display flex
        width 100%
        justify-content space-between

    &__label
        margin-bottom 20px

    &__pics-list
        display flex

    &__pic
        display block
        size(40px)
        margin-left 5px;

    &__content
        padding 20px 0

    &__title
        font(28px, 400, 1.2)
        margin-bottom 10px

    &__row
        margin-top 15px

    &__actions
        margin-top: 30px

    &__button
        -webkit-appearance none
        border-width 0
        background-color $yellow
        padding 10px 20px
        font(14px, 300, 1)

        &:hover
            background-color lighten($yellow, 15%)
            cursor pointer

        &:focus
            outline none

        &:disabled
            background-color #cbcbcb

    &__result
        font(12px, 300, 1.5)
        height 18px
        overflow hidden
        margin-top 10px

        &.progress
            color $blue

        &.success
            color $green

        &.error
            color $red

    &__footer
        background-color #747474
        padding 6px 0
        font(12px, 300, 1)
        color white