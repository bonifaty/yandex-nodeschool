@import '../../shared/mixins.styl'

.ya-form
    background-color white

    &__container
        container()

    &__header
        padding 15px 0
        background-color $red
        color white

    &__header-content
        display flex
        width 100%
        justify-content space-between

    &__label
        font(14px, 400, 1.5)

    &__pics-list
        display flex

    &__pic
        display block
        size(30px)
        margin-left 10px;

    &__content
        padding 20px 0

    &__title
        font(24px, 400, 1.2)
        margin-bottom 25px

    &__row
        margin-top 15px

    &__actions
        margin-top: 30px

    &__button
        -webkit-appearance none
        border-width 0
        background-color $yellow
        padding 10px 20px
        font(14px, 300, 1)

        &:hover
            background-color lighten($yellow, 15%)
            cursor pointer

        &:focus
            outline none

        &:disabled
            background-color #cbcbcb

    &__result
        font(12px, 300, 1.5)
        height 18px
        overflow hidden
        margin-top 10px

        &.progress
            color $blue

        &.success
            color $green

        &.error
            color $red

    &__footer
        background-color #b4b4b4
        padding 6px 0
        font(12px, 300, 1)
        color white

    &__footer-content
        display flex

    &__footer-option
        flex-basis 33.3333%